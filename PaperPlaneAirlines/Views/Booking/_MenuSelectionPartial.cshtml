@model PaperPlaneAirlines.ViewModels.MenuSelectionVM 

<section>
    <div class="card">
        <div class="card-header">
            <h3>Lokale menu keuzes</h3>
        </div>
        <div class="card-body">
            @foreach (var menu in Model.LocalMenus)
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                @menu.Name
                            </div>
                            <div class="col-6 align-content-center">
                                @menu.Description
                            </div>
                            <div>
                                <input type="hidden" name="selectedMenu" value="@menu.Id"/>
                                <button type="submit" class="btn btn-light btn-outline-dark mt-1">
                                    Voeg Menu toe
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>Standaard menu keuzes</h3>
        </div>
        <div class="card-body">
            @foreach (var menu in Model.StandardMenus)
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                @menu.Name
                            </div>
                            <div class="col-6 align-content-center">
                                @menu.Description
                            </div>
                            <div class="col-4">
                                <input type="hidden" name="selectedMenu" value="@menu.Id"/>
                                <button type="submit" class="btn btn-light btn-outline-dark mt-1">
                                    Voeg Menu toe
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>