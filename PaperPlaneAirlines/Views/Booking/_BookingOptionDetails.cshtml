@model PaperPlaneAirlines.ViewModels.BookingOptionVM

@foreach (var flight in Model.Flights)
{
    <div class="card">
        <div class="card-body ">
            <div class="fw-bold">Vluchtnummer #@flight.Id</div>
            <div class="d-flex mb-3">
                <div> @flight.FromCity.Name </div>
                <div class="ms-3 me-3">ðŸ›«</div>
                <div>@flight.ToCity.Name</div>
            </div>
            <div class="d-flex mb-3 gap-3">
                <div class="col-auto me-3">
                    <div>Vertrek:</div>
                    <div>Aankomst:</div>
                </div>
                <div class="col">
                    <div>@flight.Departure.ToShortDateString() @flight.Departure.ToShortTimeString()</div>
                    <div>@flight.Arrival.ToShortDateString() @flight.Arrival.ToShortTimeString()</div>
                </div>
            </div>


            <div class="mt-3">
                <h6>Stoelnummers</h6>
                <div class="d-flex flex-column">
                    @{
                        var p = 1;
                        @foreach (var seat in flight.SeatNumber)
                        {
                            <div class="d-flex gap-3">
                                <div>Passagier @p:</div>
                                <div>@seat</div>
                            </div>
                            p++;
                        }
                    }
                </div>
            </div>
        </div>
    </div>
}