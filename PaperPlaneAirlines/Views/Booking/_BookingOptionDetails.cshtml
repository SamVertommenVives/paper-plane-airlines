@model PaperPlaneAirlines.ViewModels.BookingOptionVM

@foreach (var flight in Model.Flights)
{
    <div class="card">
        <div class="card-body ">
            <div class="fw-bold">Vluchtnummer #@flight.Id</div>
            <div class="d-inline-flex mb-3">
                <div> @flight.FromCity.Name </div>
                <div class="ms-3 me-3">ðŸ›«</div>
                <div>@flight.ToCity.Name</div>
            </div>
            <div class="row">
                <div class="col-auto me-3">
                    <div>Vertrek:</div>
                    <div>Aankomst:</div>
                </div>
                <div class="col">
                    <div>@flight.Departure</div>
                    <div>@flight.Arrival</div>
                </div>
            </div>
                
            
            <div class="mt-3">
                <h6>Stoelnummers</h6>
                
                    @{
                        var p = 1;
                        @foreach (var seat in flight.SeatNumber)
                        {
                            <div class="row">
                                <div class="col-auto me-3">Passagier @p:</div>
                                <div class="col">@seat</div>    
                            </div>
                            p++;
                        }
                    }
                
            </div>
        </div>
    </div>
}